@model CustomerOrderViewModel

<!-- Customer Details -->
<h2>Customer Detail</h2>
<p><strong>ID:</strong> @Model.Customer.Id</p>
<p><strong>Name:</strong> @Model.Customer.Id @Model.Customer.LastName</p>
<p><strong>Email:</strong> @Model.Customer.Email</p>

<!-- Order List -->
<h2>Orders</h2>
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>